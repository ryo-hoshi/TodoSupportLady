<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?android:attr/textAppearanceLarge"
    android:id="@+id/item_detail"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apl.r_m_unt.todosupportlady.todo.TodoDetailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="1dp"
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/todo_set_title"
            android:textColor="@color/colorPrimary"
            android:background="#ffd700"
            android:id="@+id/textView_title" />
        <EditText
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="40"
            android:background="#fafad2"
            android:id="@+id/editText_title" />

        <TextView
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/todo_set_memo"
            android:textColor="@color/colorPrimary"
            android:background="#ffd700"
            android:id="@+id/textView_memo" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:minLines="10"
                android:maxLines="10"
                android:maxLength="1000"
                android:background="#fafad2"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:id="@+id/editText_detail">
            </EditText>
        </ScrollView>

        <TextView
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/todo_set_limit"
            android:textColor="@color/colorPrimary"
            android:background="#ffd700"
            android:id="@+id/textView_limit" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_limit" />
        <DatePicker
            android:visibility="gone"
            android:id="@+id/datePicker_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:id="@+id/editText_limit" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/todo_set_save"
                android:id="@+id/button_save"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/todo_set_cancel"
                android:id="@+id/button_cancel"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/todo_set_delete"
                android:id="@+id/button_delete"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/todo_set_complete"
            android:id="@+id/button_complete"
            android:layout_gravity="center_horizontal"/>

        <!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="index"
            android:visibility="invisible"
            android:id="@+id/textView_todo_id" />
        -->
    </LinearLayout>

</LinearLayout>



