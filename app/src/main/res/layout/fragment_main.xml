<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_main"
        android:src="@drawable/unitychanmain"
        android:adjustViewBounds="true"
        android:layout_gravity="top"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/textView_main"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_todo"
            android:background="@drawable/image_button_bg"
            android:layout_weight="1"
            android:src="@drawable/laala"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_info"
            android:background="@drawable/image_button_bg"
            android:layout_weight="1"
            android:src="@drawable/falulu"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_config"
            android:background="@drawable/image_button_bg"
            android:layout_weight="1"
            android:src="@drawable/unitychanlive"
            android:scaleType="fitCenter"/>
    </LinearLayout>


</RelativeLayout>